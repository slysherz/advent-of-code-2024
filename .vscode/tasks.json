{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "zig-build",
            "type": "shell",
            "command": "zig",
            "args": [
                "build-exe",
                "-femit-bin='out/${fileBasenameNoExtension}.exe'",
                "${relativeFile}",
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}